
<p id="notice"><%= notice %></p>

<h1>Trips</h1>
<h2>Welcome!</h2>

<%= form_with(url: "/search", method: "get") do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search %>
    <%= f.submit  %>
  <% end %>

  <tbody>
    <% @trips.each do |trip| %>
      <ul>
        <li><h3><%=trip.fetch("city")%> ,  <%= trip.fetch("country") %></h3></li>
          <ul>
            <h2> Reviews </h2>
          <% reviews = trip.fetch("reviews") %>
          <% reviews.each do |review| %>
            <li>Author: <%= review.fetch("author") %> - Rating: <%= review.fetch("rating") %> Stars</li>
            <ul>
            <li><%= review.fetch("body") %></li>
            </ul>
            <% end %>
          </ul>
      </ul>
    <% end %>
  </tbody>
</table>

<br>
